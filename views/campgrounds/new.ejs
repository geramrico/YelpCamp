<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">
            New Campground
        </h1>
        <div class="col-6 offset-3">

            <form action="/campgrounds" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground name: </label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        placeholder="Campground name" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        placeholder="City, State" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="campground[image]" id="image" placeholder="image Url"
                        required>
                </div>

                <div class="mb-3">
                    <label for="price">Price: </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="campground[price]" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        placeholder="Description" required></textarea>
                </div>


                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>

            </form>

        </div>
    </div>


